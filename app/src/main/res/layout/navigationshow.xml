<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/nav_HeaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/navback"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#75000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.qiuchenly.stuclient.Basic.round
                        android:id="@+id/iv_title_userImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="基佬无限好"
            android:textColor="#ffffff"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/nav_LevelTAG"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"
            android:layout_width="60dp"
            android:text="Lv null"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/leveltag"/>

    </LinearLayout>
                    <TextView
                        android:id="@+id/nav_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="999级,你已成仙."
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.05"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="我的"
                    android:textSize="11sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/nav_index"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="我的消息"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="16dp"
                        android:text="0"
                        android:textColor="#888888"
                        android:textSize="15sp" />
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.05"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="事务办理"
                    android:textSize="11sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/nav_sets"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="事务办理1"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/nav_mBillingQ"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="事务办理2"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.05"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="其他功能"
                    android:textSize="11sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/nulls"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="其他功能1"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#E0E0E0" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#aaffaa"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#cacaca" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/clickable"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/nav_program_exit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/send" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:text="退出"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_program_exitUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/clickable"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:text="注销登录"
                    android:textColor="@color/nav_fontColor"
                    android:textSize="15sp" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>